apiVersion: v1
kind: Service
metadata:
  name: {{ include "daemon-monitor-backend.fullname" . }}-app
  labels:
    {{- include "daemon-monitor-backend.labels" . | nindent 4 }}
    app.kubernetes.io/component: application
  {{- with .Values.service.annotations }}
  annotations:
    {{- toYaml . | nindent 4 }}
  {{- end }}
spec:
  type: {{ .Values.service.type }}
  ports:
    - port: {{ .Values.app.servicePort }}
      targetPort: http
      protocol: TCP
      name: http
  selector:
    {{- include "daemon-monitor-backend.selectorLabels" . | nindent 4 }}
    app.kubernetes.io/component: application
